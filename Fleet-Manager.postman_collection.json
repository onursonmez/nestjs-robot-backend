    {
      "name": "Socket.IO",
      "item": [
        {
          "name": "Connect to Socket.IO",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const socket = io('{{baseUrl}}');",
                  "",
                  "socket.on('connect', () => {",
                  "    console.log('Connected to Socket.IO');",
                  "});",
                  "",
                  "socket.on('allRobots', (robots) => {",
                  "    console.log('Received all robots:', robots);",
                  "});",
                  "",
                  "socket.on('robotCreated', (robot) => {",
                  "    console.log('Robot created:', robot);",
                  "});",
                  "",
                  "socket.on('robotUpdated', (robot) => {",
                  "    console.log('Robot updated:', robot);",
                  "});",
                  "",
                  "socket.on('robotDeleted', (robotId) => {",
                  "    console.log('Robot deleted:', robotId);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Find All Robots",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('findAllRobots');"
                ]
              }
            }
          ]
        },
        {
          "name": "Find One Robot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('findOneRobot', '{{robotId}}');"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Robot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('createRobot', {",
                  "    serialNumber: 'AGV-2023-002',",
                  "    robotType: '{{robotTypeId}}',",
                  "    status: 'IDLE'",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Robot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('updateRobot', {",
                  "    id: '{{robotId}}',",
                  "    updateRobotDto: {",
                  "        status: 'BUSY'",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Remove Robot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('removeRobot', '{{robotId}}');"
                ]
              }
            }
          ]
        },
        {
          "name": "Find All Robot Types",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "socket.emit('findAllRobotTypes');"
                ]
              }
            }
          ]
        }
      ]
